{
  "name": "bauhaus/config",
  "description": "Simple config container",
  "keywords": ["bauhaus", "container", "config", "configuration"],

  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "https://blog.fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/config/issues",
    "source": "https://github.com/bauhausphp/config"
  },

  "scripts": {
    "test:cs": "phpcs -ps --colors",
    "test:unit": "phpunit -c phpunit.xml --testdox --colors=always",
    "tests": [
        "@test:cs",
        "@test:unit"
    ]
  },

  "require": {
    "php": ">=7.2",
    "psr/container": "^v1.0.0"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^7.0.0",
    "squizlabs/php_codesniffer": "^3.2"
  }
}
