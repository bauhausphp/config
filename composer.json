{
  "name": "bauhaus/config",
  "description": "Simple configuration container.",

  "type": "library",
  "license": "MIT",

  "keywords": [
    "bauhaus",
    "config",
    "configuration"
  ],

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "https://blog.fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/config/issues",
    "source": "https://github.com/bauhausphp/config"
  },

  "require": {
    "php": ">=7.1",
    "bauhaus/container": "^1.0"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "5.3.*"
  },

  "autoload-dev": {
    "psr-4": {
      "Bauhaus\\": [
        "tests/unit/"
      ]
    }
  }
}
